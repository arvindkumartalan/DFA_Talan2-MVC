@model DFA_Talan2.DFA_DB.userInfo


@{
    Layout = null;
}




<link rel="shortcut icon" type="image/png" href="~/documentation/assets/images/icon/favicon.ico">
<link rel="stylesheet" href="~/documentation/assets/css/bootstrap.min.css">
<link rel="stylesheet" href="~/documentation/assets/css/font-awesome.min.css">
<link rel="stylesheet" href="~/documentation/assets/css/themify-icons.css">
<link rel="stylesheet" href="~/documentation/assets/css/metisMenu.css">
<link rel="stylesheet" href="~/documentation/assets/css/owl.carousel.min.css">
<link rel="stylesheet" href="~/documentation/assets/css/slicknav.min.css">
<!-- amchart css -->
<link rel="stylesheet" href="https://www.amcharts.com/lib/3/plugins/export/export.css" type="text/css" media="all" />
