<link rel="stylesheet" href="~/documentation/assets/css/typography.css">
<link rel="stylesheet" href="~/documentation/assets/css/default-css.css">
<link rel="stylesheet" href="~/documentation/assets/css/styles.css">
<link rel="stylesheet" href="~/documentation/assets/css/responsive.css">
<!-- modernizr css -->
<script src="~/documentation/assets/js/vendor/modernizr-2.8.3.min.js"></script>






<h2 align="center" class="bg-success" style="color:red">@TempData["Successful"]</h2>
<div class="login-area login-s2">
    <div class="container">
        <div class="login-box ptb--100">
            @using (Html.BeginForm("Login", "Home", FormMethod.Post))
            {
             
                <div class="login-form-head">
                    <h4>Sign In</h4>
                    <p>Hello there, Sign in and start managing your Administrator</p>
                </div>
                <div class="login-form-body">
                    <div class="form-gp">
                        <label for="exampleInputEmail1">Email address*</label>
                        <span style="color:red">@TempData["email"]</span>
                        @Html.TextBoxFor(model => model.userMail, "", new { @class = "mdl-textfield__input" })
                        @Html.ValidationMessageFor(model => model.userMail, "", new { @class = "text-danger" })
                        <i class="ti-email"></i>
                        <div class="text-danger"></div>
                    </div>
                    <div class="form-gp">
                        <label for="exampleInputPassword1">Password*</label>
                        <span style="color:red">@TempData["Password"]</span>
                        @Html.PasswordFor(model => model.userPassword, new { @class = "mdl-textfield__input" })
                        @Html.ValidationMessageFor(model => model.userPassword, "", new { @class = "text-danger" })
                        <i class="ti-lock"></i>
                        <div class="text-danger"></div>
                    </div>
                    <div class="row mb-4 rmber-area">
                        <div class="col-6">
                            <div class="custom-control custom-checkbox mr-sm-2">
                                <input type="checkbox" class="custom-control-input" id="customControlAutosizing">
                                <label class="custom-control-label" for="customControlAutosizing">Remember Me</label>
                            </div>
                        </div>
                        <div class="col-6 text-right">
                            <a href="@Url.Action("Forgot", "Home")">Forgot Password?</a>
                        </div>
                    </div>
                    <div class="submit-btn-area">
                        <button id="form_submit" type="submit">Submit <i class="ti-arrow-right"></i></button>
                    </div>
                    <div class="form-footer text-center mt-5">
                        <p class="text-muted">Don't have an account? <a href="@Url.Action("SignUp", "Home")">Sign up</a></p>
                    </div>
                </div>
             }
        </div>
    </div>
</div>


<script src="~/documentation/assets/js/vendor/jquery-2.2.4.min.js"></script>
